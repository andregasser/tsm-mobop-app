<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="mse.hqevaluator.SettingsActivity">

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:layout_width="50dip"
            android:layout_height="35dip"
            android:layout_weight="5"
            android:text="@string/activity_settings_tV_seekBar1_1"
            android:layout_gravity="center"
            android:id="@+id/tV_seekBar1_1"
            android:textColor="#ffffffff"
            android:textStyle="bold"
            android:paddingLeft="10dp" />

        <Spinner
            android:layout_width="50dip"
            android:layout_height="35dip"
            android:layout_weight="0.5"
            android:id="@+id/spinner_1"
            android:entries="@array/spinner1_arrays"
            />
    </TableRow>

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">

        <mse.hqevaluator.CustomSeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:id="@+id/seekBar1"
            />
    </TableRow>

    <TableRow>
        <TextView
            android:layout_width="50dip"
            android:layout_height="25dip"
            android:layout_weight="1"
            android:text="@string/activity_settings_tV_seekBar1_2"
            android:layout_gravity="center"
            android:id="@+id/tV_seekBar1_2"
            />

        <TextView
            android:layout_width="50dip"
            android:layout_height="25dip"
            android:layout_weight="1"
            android:text="@string/activity_settings_tV_seekBar1_3"
            android:layout_gravity="center"
            android:id="@+id/tV_seekBar1_3"
            android:gravity="center_horizontal"
            android:textColor="#ffffffff" />

        <TextView
            android:layout_width="50dip"
            android:layout_height="25dip"
            android:layout_weight="1"
            android:text="@string/activity_settings_tV_seekBar1_4"
            android:layout_gravity="center"
            android:id="@+id/tV_seekBar1_4"
            android:gravity="right" />
    </TableRow>

    <TableRow>
        <TextView
            android:layout_width="50dip"
            android:layout_height="35dip"
            android:layout_weight="1"
            android:text="@string/activity_settings_tV_seekBar2_1"
            android:id="@+id/tV_seekBar_5"
            android:enabled="false"
            android:textColor="#ffffffff"
            android:textStyle="bold"
            android:paddingLeft="10dp" />

        <Spinner
            android:layout_width="50dip"
            android:layout_height="35dip"
            android:textColor="#ffffffff"
            android:layout_weight="2.6"
            android:id="@+id/spinner_2"
            android:entries="@array/spinner3_arrays"
            />

        <Spinner
            android:layout_width="50dip"
            android:layout_height="35dip"
            android:layout_weight="0.5"
            android:id="@+id/spinner_3"
            android:entries="@array/spinner1_arrays"
            />

    </TableRow>

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">

        <mse.hqevaluator.CustomSeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:id="@+id/seekBar2"
            />
    </TableRow>

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:layout_width="50dip"
            android:layout_height="25dip"
            android:layout_weight="1"
            android:text="@string/activity_settings_tV_seekBar2_2"
            android:layout_gravity="center"
            android:id="@+id/tV_seekBar2_2"
            />

        <TextView
            android:layout_width="50dip"
            android:layout_height="25dip"
            android:layout_weight="1"
            android:textColor="#ffffffff"
            android:text="@string/activity_settings_tV_seekBar2_3"
            android:layout_gravity="center"
            android:id="@+id/tV_seekBar2_3"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="50dip"
            android:layout_height="25dip"
            android:layout_weight="1"
            android:text="@string/activity_settings_tV_seekBar2_4"
            android:layout_gravity="center"
            android:id="@+id/tV_seekBar2_4"
            android:gravity="right" />
    </TableRow>

</TableLayout>
